<div class="<%= cls if local_assigns[:cls] %>">

    <%= link_to post do %>
        <h4><%= post.name %></h4>
        <%= image_tag post.image_url(:thumb), width: '100%' %>
        <p>
            <% post.pets.each do |pet| %>
              <%= pet.name %>, 
            <% end %>
        </p>
    <% end %>

</div>
